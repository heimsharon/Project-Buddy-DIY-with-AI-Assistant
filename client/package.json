{
  "name": "@project-buddy/client",
  "version": "1.0.0",
  "description": "Frontend React application for DIY Project Buddy with AI Assistant",
  "type": "module",
  "private": true,
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:production": "NODE_ENV=production npm run build",
    "preview": "vite preview",
    "start": "npm run preview",
    "clean": "rimraf dist .vite .tsbuildinfo",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "npm run lint -- --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "pwa:dev": "vite --mode pwa-dev",
    "pwa:build": "vite build --mode pwa",
    "analyze": "npm run build && npx vite-bundle-analyzer dist",
    "android": "capacitor run android",
    "ios": "capacitor run ios",
    "build:mobile": "npm run build && capacitor sync"
  },
  "keywords": [
    "diy",
    "frontend",
    "react",
    "typescript",
    "vite",
    "pwa",
    "mobile-app",
    "ai-assistant"
  ],
  "author": {
    "name": "Sharon Heim",
    "email": "sharon@example.com"
  },
  "license": "MIT",
  "dependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.1.2",
    "react-icons": "^5.5.0",
    "react-markdown": "^10.1.0",
    "react-hook-form": "^7.55.0",
    "react-query": "^3.39.3",
    "@tanstack/react-query": "^5.62.14",
    "axios": "^1.7.9",
    "zustand": "^5.0.2",
    "framer-motion": "^11.17.21",
    "lucide-react": "^0.469.0",
    "clsx": "^2.1.1",
    "tailwind-merge": "^2.5.5",
    "react-hot-toast": "^2.4.1",
    "date-fns": "^4.1.0",
    "zod": "^3.24.1",
    "@hookform/resolvers": "^3.10.0",
    "socket.io-client": "^4.8.1",
    "workbox-window": "^7.3.0"
  },
  "devDependencies": {
    "@types/react": "^19.1.4",
    "@types/react-dom": "^19.1.5",
    "@types/node": "^22.10.5",
    "@typescript-eslint/eslint-plugin": "^8.21.0",
    "@typescript-eslint/parser": "^8.21.0",
    "@vitejs/plugin-react": "^4.3.4",
    "vite": "^6.0.7",
    "vite-plugin-pwa": "^0.21.1",
    "vite-bundle-analyzer": "^0.11.0",
    "typescript": "^5.7.3",
    "eslint": "^9.18.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "prettier": "^3.4.2",
    "prettier-plugin-tailwindcss": "^0.6.9",
    "tailwindcss": "^3.4.17",
    "postcss": "^8.5.3",
    "autoprefixer": "^10.4.20",
    "vitest": "^2.1.8",
    "@vitest/ui": "^2.1.8",
    "@vitest/coverage-v8": "^2.1.8",
    "@testing-library/react": "^16.1.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/user-event": "^14.5.2",
    "@playwright/test": "^1.49.1",
    "@storybook/react": "^8.4.7",
    "@storybook/react-vite": "^8.4.7",
    "@capacitor/core": "^6.2.0",
    "@capacitor/cli": "^6.2.0",
    "@capacitor/android": "^6.2.0",
    "@capacitor/ios": "^6.2.0",
    "rimraf": "^6.0.1"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
