{
  "name": "@project-buddy/server",
  "version": "1.0.0",
  "description": "Backend API server for DIY Project Buddy with AI Assistant",
  "type": "module",
  "main": "dist/server.js",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "tsx watch src/server.ts",
    "watch": "npm run dev",
    "clean": "rimraf dist .tsbuildinfo",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "npm run lint -- --fix",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "seed": "tsx src/scripts/seed.ts",
    "db:migrate": "tsx src/scripts/migrate.ts",
    "db:reset": "tsx src/scripts/reset.ts",
    "prod": "NODE_ENV=production npm start",
    "docker:build": "docker build -t project-buddy-server .",
    "docker:run": "docker run -p 3001:3001 project-buddy-server"
  },
  "keywords": [
    "diy",
    "api",
    "backend",
    "ai-assistant",
    "express",
    "mongodb",
    "typescript",
    "rest-api"
  ],
  "author": {
    "name": "Sharon Heim",
    "email": "sharon@example.com"
  },
  "license": "MIT",
  "dependencies": {
    "express": "^4.21.2",
    "cors": "^2.8.5",
    "helmet": "^8.0.0",
    "morgan": "^1.10.0",
    "compression": "^1.7.5",
    "express-rate-limit": "^7.4.2",
    "express-validator": "^7.2.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "dotenv": "^16.4.7",
    "mongodb": "^6.16.0",
    "mongoose": "^8.9.4",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.19",
    "openai": "^4.80.2",
    "socket.io": "^4.8.1",
    "uuid": "^11.0.5",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/cors": "^2.8.17",
    "@types/morgan": "^1.9.9",
    "@types/compression": "^1.7.5",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/multer": "^1.4.12",
    "@types/nodemailer": "^6.4.19",
    "@types/uuid": "^10.0.0",
    "@types/node": "^22.10.5",
    "@typescript-eslint/eslint-plugin": "^8.21.0",
    "@typescript-eslint/parser": "^8.21.0",
    "eslint": "^9.18.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vitest": "^2.1.8",
    "@vitest/coverage-v8": "^2.1.8",
    "supertest": "^7.0.0",
    "@types/supertest": "^6.0.2",
    "rimraf": "^6.0.1",
    "nodemon": "^3.1.9"
  }
}
