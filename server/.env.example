# =============================================================================
# FULLSTACK SERVER - ENVIRONMENT CONFIGURATION TEMPLATE 
# =============================================================================

# =============================================================================
# CORE APPLICATION SETTINGS
# =============================================================================
NODE_ENV=development
PORT=3001
HOST=localhost

# =============================================================================
# CLIENT CONNECTION
# =============================================================================
CLIENT_URL=http://localhost:3000
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# =============================================================================
# DATABASE
# =============================================================================
DATABASE_URL=mongodb://localhost:27017/your-app-name

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_change_in_production_minimum_32_chars
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d
REFRESH_TOKEN_SECRET=your_refresh_token_secret_different_from_jwt_secret

# Password Hashing
BCRYPT_SALT_ROUNDS=12

# Session Management
SESSION_SECRET=your_session_secret_for_express_sessions
COOKIE_SECRET=your_cookie_signing_secret

# Security Headers & Rate Limiting
HELMET_ENABLED=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# ADMIN ACCOUNT
# =============================================================================
ADMIN_EMAIL=admin@your-domain.com
ADMIN_PASSWORD=change_this_secure_password

# =============================================================================
# EMAIL SERVICES
# =============================================================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
FROM_EMAIL=noreply@your-domain.com

# =============================================================================
# FILE UPLOADS 
# =============================================================================
# Local Storage Fallback
USE_LOCAL_STORAGE=true
LOCAL_STORAGE_PATH=./uploads
UPLOAD_PATH=./uploads

# Upload Limits
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx

# =============================================================================
# PAYMENT PROCESSING
# =============================================================================
# Stripe
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here

# PayPal
PAYPAL_CLIENT_ID=your_paypal_client_id_here
PAYPAL_CLIENT_SECRET=your_paypal_client_secret_here

# =============================================================================
# EXTERNAL APIs
# =============================================================================
API_KEY=your_external_api_key_here
API_BASE_URL=https://api.example.com

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
LOG_LEVEL=info
LOG_FORMAT=combined
SENTRY_DSN=your_sentry_dsn_for_error_tracking